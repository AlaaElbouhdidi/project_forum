<h1 class="title is-2">Users</h1>

<% if has_role?(:admin) %>
  <div class="level">
    <div class="level-left"></div>
    <div class="level-right">
    </div>
  </div>

  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.user, user %></td>
        <td></td>
        <td>
          <div class="buttons is-right">
            <%= link_to 'Edit user', edit_user_path(user), class: 'button' %>
            <%= link_to 'Delete', user, class: 'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this user? " } %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>

  </table>

<% else %>
  <p class="has-text-center">Sorry! You don't have access this page.</p>
<% end %>
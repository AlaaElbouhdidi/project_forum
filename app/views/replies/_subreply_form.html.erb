

<%= simple_form_for([@post, @reply], remote: false) do |f| %>
  <%= f.hidden_field :parent_id %>
  <div class="field">
    <div class="control">
      <%= f.input :reply, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <%= f.button :submit, 'Submit', class:'button is-info' %>
  <%= link_to 'Cancel', post_path(@post), class: 'button ' %>

<% end %>